<%= form_for @product_category,:html => {class: "form-horizontal"} do |f| %>


    <div class="form-group">
        <%= f.label :name,class: "col-lg-3 control-label"  %>
        <div class="col-lg-9">
        <%= f.text_field :name,class: "form-control"%>
        </div>
    </div>

    <div class="form-group">
      <%= f.label :description,class: "col-lg-3 control-label" %>
      <div class="col-lg-9">
        <%= f.text_field :description,class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :content,class: "col-lg-3 control-label" %>
      <div class="col-lg-9">
        <%= f.text_area :content,class: "form-control"%>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :display,class: "col-lg-3 control-label" %>
      <div class="col-lg-9">
        <%= f.label :hide,class: "control-label" %>
        <%= f.radio_button :display,1,:checked => @product_category.display == true || 1 == 1%>
        <%= f.label :show,class: "control-label" %>
        <%= f.radio_button :display,0,:checked => @product_category.display == false %>
      </div>
    </div>

    <div class="form-group">
        <div class="col-lg-offset-3 col-lg-9">
          <%= f.submit "Submit",class: "btn btn-primary" %>
          <a href="<%= product_categories_path%>">Quay láº¡i</a>
        </div>
    </div>


<% end %>